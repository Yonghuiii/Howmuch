<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnMap"
        android:layout_width="0dp"
        android:layout_height="100sp"
        android:layout_marginHorizontal="2sp"
        android:background="#FFEFAA"
        android:drawableTop="@drawable/home"
        android:padding="5dp"
        android:text="병원찾기"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.2" />


    <Button
        android:id="@+id/btnCost"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="2sp"
        android:background="#FFEFAA"
        android:text="예상견적"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btnMap"
        app:layout_constraintStart_toEndOf="@+id/btnMap"
        app:layout_constraintWidth_percent="0.2" />


    <Button
        android:id="@+id/btnHome"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="2sp"
        android:layout_marginTop="8dp"
        android:background="#FFEFAA"
        android:drawableLeft="@drawable/home"
        android:scaleType="centerInside"
        android:text="홈"

        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btnHome"
        app:layout_constraintStart_toEndOf="@+id/btnCost"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintWidth_percent="0.2" />


    <Button
        android:id="@+id/btnInfo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="2sp"
        android:background="#FFEFAA"
        android:text="건강정보"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnMypage"
        app:layout_constraintLeft_toRightOf="@id/btnHome"
        app:layout_constraintStart_toEndOf="@+id/btnHome"
        app:layout_constraintTop_toTopOf="@+id/btnMypage"
        app:layout_constraintWidth_percent="0.2" />


    <Button
        android:id="@+id/btnMypage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="2sp"
        android:background="#FFEFAA"
        android:text="마이페이지"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnInfo"
        app:layout_constraintTop_toTopOf="@+id/btnCost"
        app:layout_constraintWidth_percent="0.2" />


    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="진료과목선택"
        android:textAlignment="center"
        android:textSize="30sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout16"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_marginStart="0sp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="0sp"
        android:layout_marginBottom="100sp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.005">

        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#FFE0C6"
            android:text="진료과목"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#FFE0C6"
            android:text="증상별"
            android:textSize="30dp" />

    </LinearLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="469dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout16">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50sp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button15"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#FFEFD5"
                android:text="피부과"
                android:textSize="30dp" />

            <Button
                android:id="@+id/button16"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#FFEFD5"
                android:text="치과"
                android:textSize="30dp" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button17"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#FFEFD5"
                android:text="안과"
                android:textSize="30dp" />

            <Button
                android:id="@+id/button18"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#FFEFD5"
                android:text="소아과"
                android:textSize="30dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button29"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#FFEFD5"
                android:text="내과"
                android:textSize="30dp" />

            <Button
                android:id="@+id/button30"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#FFEFD5"
                android:text="산부인과"
                android:textSize="30dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button31"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#FFEFD5"
                android:text="신경외과"
                android:textSize="30dp" />

            <Button
                android:id="@+id/button32"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#FFEFD5"
                android:text="정형외과"
                android:textSize="30dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button33"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#FFEFD5"
                android:text="가정의학과"
                android:textSize="30dp" />

            <Button
                android:id="@+id/button34"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#FFEFD5"
                android:text="재할의학과"
                android:textSize="30dp" />
        </TableRow>


    </TableLayout>

</android.support.constraint.ConstraintLayout>