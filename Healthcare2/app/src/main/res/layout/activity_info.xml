<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnMap"
        android:layout_width="0dp"
        android:layout_height="100sp"
        android:layout_marginHorizontal="2sp"
        android:background="#FFEFAA"
        android:drawableTop="@drawable/home"
        android:padding="5dp"
        android:text="병원찾기"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.2" />


    <Button
        android:id="@+id/btnCost"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="2sp"
        android:background="#FFEFAA"
        android:text="예상견적"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btnMap"
        app:layout_constraintStart_toEndOf="@+id/btnMap"
        app:layout_constraintWidth_percent="0.2" />


    <Button
        android:id="@+id/btnHome"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="2sp"
        android:layout_marginTop="8dp"
        android:background="#FFEFAA"
        android:drawableLeft="@drawable/home"
        android:scaleType="centerInside"
        android:text="홈"

        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btnHome"
        app:layout_constraintStart_toEndOf="@+id/btnCost"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintWidth_percent="0.2" />


    <Button
        android:id="@+id/btnInfo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="2sp"
        android:background="#FFEFAA"
        android:text="건강정보"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnMypage"
        app:layout_constraintLeft_toRightOf="@id/btnHome"
        app:layout_constraintStart_toEndOf="@+id/btnHome"
        app:layout_constraintTop_toTopOf="@+id/btnMypage"
        app:layout_constraintWidth_percent="0.2" />


    <Button
        android:id="@+id/btnMypage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="2sp"
        android:background="#FFEFAA"
        android:text="마이페이지"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnInfo"
        app:layout_constraintTop_toTopOf="@+id/btnCost"
        app:layout_constraintWidth_percent="0.2" />


    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="건강정보"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnHome"
        app:layout_constraintEnd_toStartOf="@+id/searchView"
        app:layout_constraintHorizontal_bias="0.025"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0sp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnMypage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.99"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02"/>

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_marginStart="0sp"
        android:layout_marginTop="70sp"
        android:layout_marginEnd="0sp"
        android:layout_marginBottom="100sp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.006">

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button14"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1sp"
                    android:layout_weight="1"
                    android:background="#FFE0C6"
                    android:text="전체"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1sp"
                    android:layout_weight="1"
                    android:background="#FFE0C6"
                    android:text="핫이슈"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1sp"
                    android:layout_weight="1"
                    android:background="#FFE0C6"
                    android:text="다이어트"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1sp"
                    android:layout_weight="1"
                    android:background="#FFE0C6"
                    android:text="건강/질병"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1sp"
                    android:layout_weight="1"
                    android:background="#FFE0C6"
                    android:text="음식/영양"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button12"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1sp"
                    android:layout_weight="1"
                    android:background="#FFE0C6"
                    android:text="피부미용"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button13"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1sp"
                    android:layout_weight="1"
                    android:background="#FFE0C6"
                    android:text="생활정보"
                    android:textSize="20dp" />


            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_marginStart="0sp"
        android:layout_marginTop="50sp"
        android:layout_marginEnd="0sp"
        android:layout_marginBottom="100sp"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30sp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0sp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/h1" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0sp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/h2" />

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="180sp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0sp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/h3" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0sp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/h4" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="180sp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0sp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/h6" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0sp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/h2" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="180sp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0sp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/h3" />

            <ImageButton
                android:id="@+id/imageButton8"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0sp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/h1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="180sp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton9"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0sp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/h5" />

            <ImageButton
                android:id="@+id/imageButton10"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0sp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/h6" />

        </TableRow>

    </TableLayout>


</android.support.constraint.ConstraintLayout>